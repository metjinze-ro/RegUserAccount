        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="35dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
